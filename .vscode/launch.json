    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["-nick", "Nick", "-wpbot"],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch without bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["-nick", "Nick"],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch while waiting",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["-nick", "Nick", "-wait"],
            "console": "integratedTerminal"
        }
    ]
}